#!/bin/sh

set -o xtrace

DBNAME=percona
ENGINE=percona
TABLE_SIZE=1000
TEST=/usr/share/sysbench/tests/include/oltp_legacy/oltp.lua
#SOCKET=${1:-/var/lib/mysql/mysql.sock}

if [ -S "$SOCKET" ]; then
    CONNECTION="--socket=$SOCKET"
    SB_CONNECTION="--mysql-socket=$SOCKET"
else
    CONNECTION="--host=$SOCKET"
    SB_CONNECTION="--mysql-host=$SOCKET"
fi

sysbench \
    --db-driver=pgsql \
    --pgsql-host=localhost \
    --pgsql-user=sbtest \
    --pgsql-password=sbtest \
    --pgsql-db=$DBNAME \
    --oltp-table-size=$TABLE_SIZE \
    $TEST \
    prepare

while true; do
    sysbench \
        --rate=1 \
        --threads=1 \
        --report-interval=10 \
        --time=0 \
        --events=0 \
        --rand-type=pareto \
        --db-driver=pgsql \
        --pgsql-host=localhost \
        --pgsql-user=sbtest \
        --pgsql-password=sbtest \
        --syql-db=$DBNAME \
        --oltp-reconnect \
        --oltp-table-size=$TABLE_SIZE \
        $TEST \
        run
    sleep 60
done
